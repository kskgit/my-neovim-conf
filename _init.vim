nnoremap <silent> <Leader>bp :DlvToggleBreakpoint<CR>
nnoremap <silent> <Leader>dbp :DlvRemoveBreakpoint<CR>
nnoremap <silent> <Leader>ds :DlvToggleBreakpoint<CR>

function! s:find_rip_grep() abort
    call fzf#vim#grep(
                \   'rg --ignore-file ~/.ignore --column --line-number --no-heading --hidden --smart-case .+',
                \   1,
                \   fzf#vim#with_preview({'options': '--delimiter : --nth 4..'}, 'right:50%', '?'),
                \   0,
                \ )
endfunction

